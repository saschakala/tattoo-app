<h1>Edit your tattoo below</h1>
<h4><i>(although we're not exactly sure how that would work...logistically)</i> </h4>
<br>
<br>
<form method="post" action="/tattoos/<%= @tat.id %>">
    <input type="hidden" id="hidden" name="_method" value="patch">
        <p><strong>Tattoo: </strong><input type="text" name="image" value=" <%= @tat.image %>"></p>
        <p><strong>Size: </strong><select type ="text" name="size">
            <option selected disabled hidden> <%= @tat.size %> </option>
            <option value="small">small</option>
            <option value="medium">medium</option>
            <option value="large">large</option>
            <option value="extra-large">extra-large</option>
        </select>
        <p><strong>Colors: </strong><input type="text" name="color" value="<%= @tat.color %>"></p>
        <p><strong>Style: </strong><input type="text" name="style" value="<%= @tat.style %>"></p>
        <p><strong>Placement: </strong><%= @tat.placement %></p>
        <p><strong>Description: </strong></p>
        <p><textarea name="description"><%= @tat.description %></textarea> </p>
        <p><strong>Artist's name: </strong> 
        
            <% if !!@tat.artist == true %>
                <a href="/artists/<%=@tat.artist.id%>"> <%= @tat.artist.name %> </a>
            <% elsif !!@tat.name_of_artist == true %>
                <%= @tat.name_of_artist %>
            <% end %>
         </p>
        <input type="submit" value="Update tattoo">
</form>
